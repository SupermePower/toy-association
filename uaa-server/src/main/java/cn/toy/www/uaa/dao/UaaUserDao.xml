<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.youroem.www.uaa.dao.UaaUserDao">
    <resultMap id="userMap" type="cn.youroem.www.user.SecurityUser">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="password" property="password"/>
        <result column="mobile" property="mobile"/>
        <result column="user_name" property="userName"/>
    </resultMap>

    <select id="findById" resultMap="userMap" parameterType="java.lang.String">
        SELECT
            id,
            mobile,
            name,
            user_name,
            password
        FROM distributed_user
        WHERE
          id = #{id}
          AND is_delete = 0
          AND status = 1
    </select>

    <select id="findByUserName" resultMap="userMap" parameterType="java.lang.String">
        SELECT
            id,
            mobile,
            name,
            user_name,
            password
        FROM distributed_user
        WHERE
          user_name = #{userName}
          AND is_delete = 0
          AND status = 1
    </select>
</mapper>